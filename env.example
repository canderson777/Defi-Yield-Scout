# DeFi Yield Scout Environment Configuration
# Copy this file to .env and add your API keys

# LLM Provider (required for ROMA)
LITELLM_API_KEY=your_llm_api_key_here

# DeFi Data Providers
DEFILLAMA_API_KEY=  # DefiLlama is free, no API key needed
COINGECKO_API_KEY=your_coingecko_api_key_here  # Free tier available

# Blockchain Data
ETHERSCAN_API_KEY=your_etherscan_api_key_here  # For gas tracking
ALCHEMY_API_KEY=your_alchemy_api_key_here  # For blockchain data

# Optional: E2B for advanced analysis
E2B_API_KEY=your_e2b_api_key_here

# Optional: AWS S3 for data persistence
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# DeFi Yield Scout Configuration
DEFAULT_CHAINS=ethereum,polygon,arbitrum,optimism
MAX_APY_THRESHOLD=1000  # Maximum APY to consider (safety filter)
RISK_TOLERANCE=medium  # low, medium, high
